<section>
  <div class=" container row flex-d justify-content-center">
    <div class="ml-5 col-md-6">
      <h2 class="text-center mt-5">Edit Products</h2>
      <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
        <label for="">Name</label>
        <input type="text" name="name" class="form-control" value="{{product.name}}">

        {{!-- <label for="">Description</label>
        <input type="text" name="description" class="form-control" value="{{product.description}}"> --}}
         <div class="form-floating mb-3 mt-3">
                                <select class="form-select" id="floatingSelect"
                                    aria-label="Floating label select example" name="category">
                                    <option selected>Select category</option>
                                    {{#each categorydetails}}
                                    <option value="{{this.category}}">{{this.category}}</option>
                                    {{!-- <option value="2">Two</option>
                                    <option value="3">Three</option> --}}
                                    {{/each}}
                                </select>
                                <label for="floatingSelect">Category</label>
                            </div>

        <label for="">Price</label>
        <input type="Number" name="price" class="form-control" value="{{product.price}}">

        <label for="">Image</label>
        <img src="/product-images/{{product._id}}.jpg" alt="" style="width:100px; height:100px">
        <input type="file" name="Image" class="form-control">

        <button type="submit" class="btn btn-success mt-4">Submit</button>

      </form>
    </div>
  </div>
</section>