<section>
    <div class="container"> 
        <div class="">
            <a href="/admin/add-product" class="btn btn-success mt-5">Add Product</a>
        </div>
        <table class="table" id="product">
            <thead>
                <tr>
                    
                    <th scope="col">Number</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Option</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{inc @index}} </td>
                    <td>{{this.name}} </td>
                    <td>{{this.category}} </td>
                    <td>â‚¹{{this.price}}</td>
                    <td><img src="/product-images/{{this.Image.[0]}}" style="width: 50px; height: 50px;"></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                    <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are  you want to delete {{this.Name}} ?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</section>
<script>
    $(document).ready(function () {


        $('#product').wrap('<div id="hide" style="display:none"/>');

        $('#hide').css('display', 'block');
    });


    var table = $('#product').DataTable();
</script>